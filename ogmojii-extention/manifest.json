{
  "manifest_version": 3,
  "name": "OGMojii",
  "version": "1.0",
  "description": "Add zero-width spaces to emoji names on Facebook and Instagram",
  "permissions": ["tabs", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["ogmojii.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
